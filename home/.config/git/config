[push]
    default = simple
[alias]
    b = branch --color
    ci = commit -v
    cia = commit --amend --no-edit
    co = checkout
    d = diff -w
    ds = diff --staged -w
    forget = rm --cached
    l = log --graph --decorate
    p = pull --prune
    pu = push
    puf = push --force
    pun = !git push --set-upstream origin $(git symbolic-ref -q --short ${1:-HEAD})
    rc = rebase --continue
    rim = rebase -i master
    s = status
    sh = show -w
    sl = show --name-only
[include]
    path = .gitconfig.local
[pull]
	rebase = true
[init]
	defaultBranch = master
